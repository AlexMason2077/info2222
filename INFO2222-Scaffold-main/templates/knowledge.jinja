{% extends 'base.jinja' %}

{% block content %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to right, #6e6e6e, #5036a4);
        display: flex;
        flex-direction: row; /* ‰∏ªËΩ¥‰∏∫Ê∞¥Âπ≥ÊñπÂêë */
        height: 100vh;
        margin: 0;
    }

    .top-nav {
        width: 100%;
        background-color: rgba(255, 255, 255, 0.9);
        padding:5px 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        font-size: 14px; 
        font-weight: bold;
    }


    .user-avatar {
        width: 100px;
        height: 30px;
        border-radius: 50%;
        background-color: #f2f2f2;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 50px;
        margin-right: 0px;
    }

    .side-nav {
        width: 120px;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 30px;
        height: 100%;
        overflow-y: auto;
        position: fixed;
        top: 54px;
        bottom: 0;
        left: 0;
        z-index: 1000;
    }

    .content-area {
        margin-left: 200px; /* Same width as the side nav */
        margin-top: 40px; /* Same height as the top nav */
        flex-grow: 1;
        padding: 20px;
        overflow-y: auto;
    }
    
    .search-bar {
        padding: 10px;
        width: calc(100% - 200px);
        margin-bottom: 20px;
        border: 2px solid #4029a0;
        border-radius: 5px;
        color: #4029a0;
    }

    .nav-link, .btn {
        padding: 10px;
        margin-right: 10px;
        color: #4029a0;
        text-decoration: none;
    }

    .nav-link:hover, .btn:hover {
        background-color: #e0d1f2;
        border-radius: 5px;
    }
</style>

<nav class="top-nav">
    <!-- Left-aligned items -->
    <div>
        <a href="/home?username={{ username }}" class="nav-link">Home</a>
        <a href="/knowledge" class="nav-link">Knowledge</a>
        <a href="#about" class="nav-link">About</a>
    </div>

    <!-- Right-aligned items -->
    <div>
        <ol style="list-style: none; padding: 0;">
            <li style="display: inline-block; margin-right: 10px;">
                Username: {{ username }}
            </li>
            <li style="display: inline-block;">
                <a href="javascript:void(0)" onclick="logoutAndClearStorage()" class="btn">Logout</a>
            </li>
        </ol>
    </div>
</nav>

<nav class="side-nav">
    <div class="user-avatar">ü§ì</div> 
    <p><strong>Username:</strong> {{ username }}</p>
    <hr>
    <p><strong>Articles:</strong></p>
    <!-- Dynamically add article links here -->
    <a href="#" class="nav-link">Article 1</a>
    <a href="#" class="nav-link">Article 2</a>
    <a href="#" class="nav-link">Article 3</a>
</nav>

<div class="content-area">
    <h1>Welcome to the Knowledge Base</h1>
    <input type="text" placeholder="Search articles..." class="search-bar">
    <p>This is the area where you can add more dynamic content, articles, and other information.</p>
</div>

{% endblock %}
