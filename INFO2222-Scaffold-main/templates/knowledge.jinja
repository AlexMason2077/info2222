    .btn-new-article {
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        display: block;
        text-decoration: none;
        margin-bottom: 20px;
        transition: background-color 0.3s ease;
    }

    .btn-new-article:hover {
