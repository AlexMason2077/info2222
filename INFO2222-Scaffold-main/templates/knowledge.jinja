        height: 60px;
    }

    .nav-link {
        padding: 10px 15px;
        color: #333;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .nav-link:hover {
        background-color: #e0e0e0;
        border-radius: 5px;
    }

    .nav-links,
