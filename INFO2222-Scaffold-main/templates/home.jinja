{% extends 'base.jinja' %}


{% block content %} 
   <style>

    nav {
        border-bottom: 1px solid black;
        overflow: auto
    }
    

    #message_box {
        border: 1px solid black; 
        height: 400px; 
        width: 800px; 
        overflow: auto;
        padding: 2px;
    }

    #friend_list_box {
        position: fixed;
        bottom: 10px;
        right: 10px;
